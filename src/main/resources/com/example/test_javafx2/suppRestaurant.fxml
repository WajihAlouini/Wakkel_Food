<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test_javafx2.RestaurantController">

    <!-- You can adjust the layout and styles as needed -->
    <children>
      <ImageView fx:id="supprestobg" fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../images/supplatbg.jpg" />
         </image>
      </ImageView>
        <!-- Label for Restaurant ID -->
        <Label layoutX="7.0" layoutY="66.0" prefHeight="19.0" prefWidth="107.0" text="ID du restaurant" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font></Label>

        <!-- TextField for entering Restaurant ID -->
        <ComboBox fx:id="idTextField" layoutX="124.0" layoutY="63.0" prefHeight="25.0" prefWidth="121.0" />

        <!-- Supprimer Button -->
        <Button fx:id="supprimerButton" layoutX="99.0" layoutY="121.0" onAction="#handleSupprimer" text="Supprimer" />

        <!-- You can add more elements or adjust the layout as needed -->
    </children>
</AnchorPane>
