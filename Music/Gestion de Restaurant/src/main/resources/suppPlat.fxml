<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200" prefWidth="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PlatController">

    <!-- You can adjust the layout and styles as needed -->
    <ImageView fx:id="supplatbg" fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@images/supplatbg.jpg" />
    </ImageView>
    <!-- Label for Plat ID -->
    <Label layoutX="33.0" layoutY="65.0" text="ID du plat" textFill="WHITE">
        <font>
        <Font name="System Bold Italic" size="14.0" />
        </font>
    </Label>

    <!-- TextField for entering Plat ID -->
    <ComboBox fx:id="platIdTextField" layoutX="134.0" layoutY="63.0" prefHeight="25.0" prefWidth="116.0" />

    <!-- Supprimer Button -->
    <Button fx:id="supprimerPlatButton" layoutX="112.0" layoutY="124.0" onAction="#handleSupprimerPlat" text="Supprimer" />

    <!-- You can add more elements or adjust the layout as needed -->
</AnchorPane>
