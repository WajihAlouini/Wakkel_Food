<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="994.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controles.ListeEvaluation">
    <children>
        <TableView fx:id="evaluationsTable" layoutX="1.0" layoutY="-2.0" prefHeight="600.0" prefWidth="746.0">
            <columns>
                <!-- ID Evaluation Column -->
                <TableColumn text="ID Evaluation">
                    <prefWidth>120.0</prefWidth>
                    <cellValueFactory>
                        <PropertyValueFactory property="id_evaluation" />
                    </cellValueFactory>
                </TableColumn>

                <!-- ID Commande Column -->
                <TableColumn text="ID Commande">
                    <prefWidth>120.0</prefWidth>
                    <cellValueFactory>
                        <PropertyValueFactory property="id_commande" />
                    </cellValueFactory>
                </TableColumn>

                <!-- Date Column -->
                <TableColumn text="Date">
                    <prefWidth>120.0</prefWidth>
                    <cellValueFactory>
                        <PropertyValueFactory property="date" />
                    </cellValueFactory>
                </TableColumn>

                <!-- Note Column -->
                <TableColumn text="Note">
                    <prefWidth>120.0</prefWidth>
                    <cellValueFactory>
                        <PropertyValueFactory property="note" />
                    </cellValueFactory>
                </TableColumn>

                <!-- Commentaire Column -->
                <TableColumn text="Commentaire">
                    <prefWidth>200.0</prefWidth>
                    <cellValueFactory>
                        <PropertyValueFactory property="commentaire" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <!-- Add the "Supprimer" button -->

        <Button layoutX="794.0" layoutY="147.0" onAction="#DeleteEvaluation" prefHeight="30.0" prefWidth="131.0" text="Supprimer" />
        <Button layoutX="794.0" layoutY="92.0" onAction="#UpdateEvaluation" prefHeight="30.0" prefWidth="131.0" text="Modifier" />
    </children>
</AnchorPane>
